@model APP.Models.Fruta

@{
    var rolUsuario = Context.Session.GetString("Rol");
}

<div class="container mt-5">
    <h2 class="mb-4">Editar Fruta: @Model.Nombre</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="IdFruta" />

        <div class="mb-3">
            <label asp-for="Nombre" class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Tipo" class="form-label">Tipo</label>
            <input asp-for="Tipo" class="form-control" />
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Color" class="form-label">Color</label>
            <input asp-for="Color" class="form-control" />
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="EsTropical" class="form-check-input" />
            <label asp-for="EsTropical" class="form-check-label">Es tropical</label>
        </div>

        <div class="mb-3">
            <label asp-for="Precio" class="form-label">Precio</label>
            <input asp-for="Precio" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProveedoresIdProveedor" class="form-label">Proveedor</label>
            <select asp-for="ProveedoresIdProveedor"
                    class="form-select"
                    asp-items="@(new SelectList(ViewBag.Proveedores, "IdProveedor", "Nombre"))">
                <option value="">-- Seleccione un proveedor --</option>
            </select>
            <span asp-validation-for="ProveedoresIdProveedor" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Imagen" class="form-label">URL de la imagen</label>
            <input asp-for="Imagen" class="form-control" />
            <span asp-validation-for="Imagen" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">Guardar cambios</button>
        <a asp-action="Details"
           asp-route-id="@Model.IdFruta"
           class="btn btn-secondary ms-2">
            Cancelar
        </a>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<style>
    h2 {
        font-weight: bold;
    }
    .btn-warning, .btn-secondary {
        padding: 10px 15px;
        font-size: 1rem;
    }
    .mb-3 {
        margin-bottom: 1rem;
    }
</style>
